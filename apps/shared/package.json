{
  "name": "@apps/shared",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Shared security utilities for OAuth educational project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./security": {
      "import": "./dist/security.js",
      "types": "./dist/security.d.ts"
    },
    "./environment": {
      "import": "./dist/environment.js",
      "types": "./dist/environment.d.ts"
    },
    "./logging": {
      "import": "./dist/logging.js",
      "types": "./dist/logging.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware.js",
      "types": "./dist/middleware.d.ts"
    },
    "./validation": {
      "import": "./dist/validation.js",
      "types": "./dist/validation.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "oauth",
    "security",
    "utilities",
    "educational"
  ],
  "author": "OAuth Educational Project",
  "license": "MIT",
  "dependencies": {
    "helmet": "^8.1.0",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "express": "^5.1.0"
  }
}