{
  "name": "@apps/auth",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm css:watch\" \"tsx watch src/index.ts\"",
    "css:build": "pnpm exec tailwindcss -i ./src/css/input.css -o ./public/styles.css",
    "css:watch": "pnpm exec tailwindcss -i ./src/css/input.css -o ./public/styles.css --watch",
    "build": "pnpm css:build && tsc -p tsconfig.json",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@apps/shared": "workspace:*",
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "oidc-provider": "^9.6.0",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
